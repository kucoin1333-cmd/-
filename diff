<body>

  <div class="card">
    <h2>محاسبه اقساط</h2>

    <label>مبلغ وام (تومان)</label>
    <input type="number" id="loanAmount" placeholder="مثلاً 5000000">

    <label>تعداد ماه</label>
    <input type="number" id="months" placeholder="مثلاً 12">

    <button onclick="calculateInstallment()">محاسبه قسط</button>

    <div id="result"></div>
  </div>

  <script>
    function calculateInstallment() {
      let loan = parseFloat(document.getElementById("loanAmount").value);
      let months = parseInt(document.getElementById("months").value);

      if (isNaN(loan) || isNaN(months) || loan <= 0 || months <= 0) {
        document.getElementById("result").innerText = "لطفاً مقادیر معتبر وارد کنید.";
        return;
      }

      // محاسبه کارمزد
      let fee = ((months + 1) * 40 * loan) / 2400;

      // مبلغ کل
      let total = loan + fee;

      // مبلغ هر قسط
      let installment = total / months;

      document.getElementById("result").innerText =
        "مبلغ هر قسط: " + installment.toFixed(0).toLocaleString("fa-IR") + " تومان";
    }
  </script>

</body>
